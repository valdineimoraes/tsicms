<tr>
  <td><%= recommendation.title %></td>
  <td><%= recommendation.category_recommendation.name %></td>
  <td><%= l(recommendation.created_at, format: :long) %></td>
  <td>
    <%= link_to edit_admins_recommendation_path(recommendation) do %>
      <span class="icon mr-3">
        <i class="fas fa-edit" data-toggle="tooltip" data-placement="top" title="Editar"></i>
      </span>
    <% end %>

    <%= link_to [:admins, recommendation], method: :delete, data: { confirm: t('prompt.confirm') } do %>
      <span class="icon mr-3">
        <i class="fas fa-trash-alt" data-toggle="tooltip" data-placement="top" title="Remover"></i>
      </span>
    <% end %>
  </td>
</tr>
