
<%= simple_form_for [:admins, @period] do |f| %>
    
  <div class="card-body">
    <div class="row">

      <div class="col-sm-6 col-md-8">
        <%= f.input :name %>
      </div>

      <div class="col-sm-6 col-md-4">
        <%= f.association :matrix, label_method: :name, 
        value_method: :id, prompt: "Escolha a Matriz"  %>
      </div>
    </div>

  </div>
    
  <div class="card-footer text-right">
  
    <div class="d-flex">
      <%= link_to "Voltar", admins_periods_path, class: 'btn btn-link' %>
      <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
    </div>

  </div>
      
<% end %>
