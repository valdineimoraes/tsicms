<% provide(:page_title, 'Periodos') %>

<% breadcrumb :periods %>

<div class=" text-right">
  <%= link_to  new_admins_period_path, 
              class: 'btn btn-secondary', 
              title: ' Novo PerÃ­odo', 
              data:{ toggle: 'tooltip', placement: 'top'} do%>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-data card-table table-vcenter text-nowrap">

    <thead>
      <tr>
        <th><%= I18n.t('activerecord.attributes.period.name') %></th>
        <th><%= I18n.t('activerecord.attributes.period.matrix') %> </th>
        <th> <%= I18n.t('activerecord.attributes.period.created_at') %> </th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @periods.each do |period| %>
        <tr>
          <td><%= period.name %></td>
          <td><%= period.matrix.name %></td>
          <td><%= period.created_at %></td>

          <td>
          <%= link_to admins_period_path(period) do%>
            <span class="icon mr-3"><i class="fas fa-folder-open" 
            data-toggle="tooltip" data-placement="top" title="Visualizar"></i></span>
          <% end %>

          <%= link_to edit_admins_period_path(period) do%>
            <span class="icon mr-3"><i class="fas fa-edit"
            data-toggle="tooltip" data-placement="top" title="Editar"></i></span>
          <% end %>

          <%= link_to [:admins, period], method: :delete, data: { confirm: t('prompt.confirm')} do%>
            <span class="icon mr-3"><i class="fas fa-trash-alt"
            data-toggle="tooltip" data-placement="top" title="Remover"></i></span>
          <% end %>
          </td>
          
          
        </tr>
      <% end %>
    </tbody>

  </table>
  
</div>
<br>
<div class="ui right floated pagination menu">
<%= will_paginate @periods, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>