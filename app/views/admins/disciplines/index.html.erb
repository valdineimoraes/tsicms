<% provide(:page_title, 'Disciplinas') %>

<% breadcrumb :disciplines %>

<div class=" text-right">
  <%= link_to  new_admins_discipline_path, 
              class: 'btn btn-secondary', 
              title: ' Nova Disciplina', 
              data:{ toggle: 'tooltip', placement: 'top'} do%>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-data card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= I18n.t('activerecord.attributes.discipline.name') %></th>
        <th><%= I18n.t('activerecord.attributes.discipline.code') %></th>
        <th><%= I18n.t('activerecord.attributes.discipline.workload') %></th>
        <th><%= I18n.t('activerecord.attributes.discipline.period') %> </th>
        <th><%= I18n.t('activerecord.attributes.discipline.matrix') %> </th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @disciplines.each do |discipline| %>
        <tr>
          <td><%= discipline.name %></td>
          <td><%= discipline.code %></td>
          <td><%= discipline.hours %></td>
          <td><%= discipline.period.name %></td>
          <td><%= discipline.period.matrix.name %></td>

          <td>
          <%= link_to admins_discipline_path(discipline) do%>
            <span class="icon mr-3"><i class="fas fa-folder-open" 
            data-toggle="tooltip" data-placement="top" title="Visualizar"></i></span>
          <% end %>

          <%= link_to edit_admins_discipline_path(discipline) do%>
            <span class="icon mr-3"><i class="fas fa-edit"
            data-toggle="tooltip" data-placement="top" title="Editar"></i></span>
          <% end %>

          <%= link_to [:admins, discipline], method: :delete, data: { confirm: t('prompt.confirm')} do%>
            <span class="icon mr-3"><i class="fas fa-trash-alt"
            data-toggle="tooltip" data-placement="top" title="Remover"></i></span>
          <% end %>
          </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="ui right floated pagination menu">
  <%= will_paginate @disciplines, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
